<!DOCTYPE html>
<html>
  <head>
    <title>Jobmania</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <a href="" class="logo">Jobmania</a>
      <a href=""></a>
      <a href=""></a>
      <% if user_signed_in? %>
      <div class="header-right">
        <%= link_to "Home", root_path%> 
        <%= link_to 'Edit Profile', edit_user_registration_path%> 
        <% if company? %>
          <%= link_to 'Add Details', new_company_path%>
          <%= link_to 'Add Jobs', new_job_path%>
        <% else %>
          <%= link_to 'Add Details', new_seeker_path%>
        <% end %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete%>
        <% else %>
        <%= link_to "Home", root_path%> 
        <%= link_to "Register", new_user_registration_path%> 
        <%= link_to "Login", new_user_session_path%> 
      <% end %>
      </div>
    </div>
    <div class="container">
      <%= yield %>
    </div>
    <!-- Footer -->
    <footer class="page-footer font-small blue">
      <!-- Copyright -->
      <div class="footer-copyright text-center py-3">Â© 2019 Copyright: Sneha Namdev
